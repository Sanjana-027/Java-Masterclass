public class EvenDigitSum {
    // write your code here
    public static int getEvenDigitSum(int number){
        if(number < 0){
            return -1;
        }
        int sum = 0;
        while (number > 0){
            int Even = number % 10;
            number /= 10;
            
            if (Even % 2 == 0) {
                sum += Even;
            
        }
    }
    return sum;
}
}
